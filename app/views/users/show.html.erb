<p id="notice"><%= notice %></p>
<%= debug @user.image %>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
<strong>Image:</strong>
<% if @user.image? %>
  <div class="thumbnail">
  <%= image_tag @user.image.url %>
</div>
<% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
